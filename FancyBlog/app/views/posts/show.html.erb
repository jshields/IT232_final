<p id="notice"><%= notice %></p>

<%= render :partial => @post %>

<div class="clear padded"></div>

<h3>Comments</h3>
<div id="comments">
    <%= render :partial => @post.comments %>
</div>

<%= form_for [@post, Comment.new] do |f| %>
        <p>
            <%= f.label :label, "New comment" %>
            <div class="clear"></div>
            <div class="blackText"><%= f.text_area :body %></div>
        </p>
        <p class="blackText"><%= f.submit "Add comment" %></p>
<% end %>
</div>


